---
import friendsData from "../../data/friends.json";
import Layout from "../../layouts/Layout.astro";

const pageTitle = "友情链接 | Frederick's Blog";
const pageDescription = "我的朋友们";
---

<Layout
  title={pageTitle}
  description={pageDescription}
  className="max-w-100px flex h-svh flex-col justify-center"
>
  <main class="space-y-6">
    <div
      class="grid grid-cols-6 gap-3 p-4 sm:grid-cols-8 sm:gap-4 md:grid-cols-10 lg:grid-cols-10"
    >
      {
        friendsData.map((friend) => (
          <a
            href={friend.url}
            target="_blank"
            rel="noopener noreferrer"
            class="group relative flex items-center justify-center transition-transform hover:scale-110"
            title={friend.name}
          >
            <img
              src={friend.avatar}
              alt={friend.name}
              class="w-12 rounded-full object-cover sm:w-14 md:w-16"
              loading="lazy"
            />
            <span class="absolute bottom-[-2rem] left-1/2 -translate-x-1/2 whitespace-nowrap rounded bg-gray-800 px-2 py-1 text-sm text-white opacity-0 transition-opacity group-hover:opacity-100 dark:bg-gray-200 dark:text-gray-800">
              {friend.name}
            </span>
          </a>
        ))
      }
    </div>
    <div class="mt-6 flex justify-center">
      <a
        href="/friends/exchange/"
        class="text-zinc-500 hover:underline dark:text-zinc-500"
      >
        交换友链 &rarr;
      </a>
    </div>
  </main>
</Layout>
